{
  "name": "vite-plugin-yalc",
  "version": "0.0.4",
  "description": "A yalc plugin for vite-based library projects.",
  "author": "Eric Hubbell<eric@erichubbell.com>",
  "license": "ISC",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "vite",
    "vite-library",
    "vite-plugin",
    "yalc",
    "yalc-plugin"
  ],
  "scripts": {
    "start": "vite build --mode development --minify false --watch",
    "build": "vite build --mode production --minify true && npm run build:ts",
    "build:ts": "dts-bundle-generator --config dts.config.ts",
    "clean": "npm run lint:fix",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier src",
    "format:fix": "prettier --write src",
    "commit": "scripts/commit.sh",
    "deploy": "scripts/deploy.sh",
    "git": "git push --tags",
    "test": "jest",
    "prepare": "husky"
  },
  "dependencies": {
    "yalc": "^1.0.0-pre.53"
  },
  "devDependencies": {
    "@playbooks/configs": "^0.0.1",
    "@types/jest": "^29.5.1",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "prettier": "^3.5.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.0"
  }
}
